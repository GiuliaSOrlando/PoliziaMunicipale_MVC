@model List<ViolazionePuntiDieciQuattrocento>

<nav class="navbar navbar-expand-lg navbar-light">

    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                @Html.ActionLink("Violazioni per anagrafica", "VisualizzaTotaleVerbaliTrascrittiPerTrasgressore", "Verbali", new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Violazioni per punti", "VisualizzaTotalePuntiDecurtatiPerTrasgressore", "Verbali", new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Violazioni per punti (10)", "VisualizzaViolazioniDieci", "Verbali", new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Violazioni per importo (400)", "VisualizzaViolazioniConImportoElevato", "Verbali", new { @class = "nav-link" })
            </li>

        </ul>
    </div>
</nav>

<h2>Violazioni con importo superiore a 400 euro</h2>

<table class="table">
    <thead>
        <tr style="background-color: #007bff; color: white;">
            <th>Importo</th>
            <th>Cognome Trasgressore</th>
            <th>Nome Trasgressore</th>
            <th>Data Violazione</th>
            <th>Decurtamento Punti</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var violazione in Model)
        {
            <tr>
                <td>@violazione.Importo.ToString("C")</td>
                <td>@violazione.CognomeTrasgressore</td>
                <td>@violazione.NomeTrasgressore</td>
                <td>@violazione.DataViolazione.ToString("dd/MM/yyyy")</td>
                <td>@violazione.DecurtamentoPunti</td>
            </tr>
        }
    </tbody>
</table>

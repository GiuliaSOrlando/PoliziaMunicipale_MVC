@model IEnumerable<PoliziaMunicipale_MVC.Verbale>

@{
    ViewBag.Title = "Index";
}

<nav class="navbar navbar-expand-lg navbar-light">

    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                @Html.ActionLink("Violazioni per anagrafica", "VisualizzaTotaleVerbali", "Verbali", new { @class = "nav-link text-primary fw-bolder" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Violazioni per punti", "VisualizzaTotalePunti", "Verbali", new { @class = "nav-link text-primary fw-bolder" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Violazioni per punti (10)", "VisualizzaViolazioniDieci", "Verbali", new { @class = "nav-link text-primary fw-bolder" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Violazioni per importo (400)", "VisualizzaViolazioniQuattrocento", "Verbali", new { @class = "nav-link text-primary fw-bolder" })
            </li>

        </ul>
    </div>
</nav>

<p>
    @Html.ActionLink("Inserisci nuovo verbale", "Login", "Login", null, new { @class = "btn btn-outline-primary" })
</p>
<table class="table">
    <tr style="background-color: #007bff; color: white;">
        <th>
            @Html.DisplayNameFor(model => model.IdVerbale)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataViolazione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IndirizzoViolazione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NominativoAgente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataTrascrizioneVerbale)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Importo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DecurtamentoPunti)
        </th>
        <th>
            Nominativo trasgressore
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdViolazione)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdVerbale)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataViolazione)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IndirizzoViolazione)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NominativoAgente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataTrascrizioneVerbale)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Importo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DecurtamentoPunti)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NominativoTrasgressore)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdViolazione)
        </td>

    </tr>
}

</table>

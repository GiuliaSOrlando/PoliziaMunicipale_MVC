@model IEnumerable<PoliziaMunicipale_MVC.Anagrafica>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-primary">Anagrafica</h2>

<p>
    @Html.ActionLink("Inserisci anagrafica trasgressore", "Create", null, new { @class = "btn btn-outline-primary" })
</p>
<table class="table">
    <tr style="background-color: #007bff; color: white;">
        <th>
            ID Anagrafica
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cognome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Indirizzo)
        </th>
        <th>
            Città
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CAP)
        </th>
        <th>
            Codice fiscale
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdAnagrafica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cognome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Indirizzo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Citta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CAP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CF)
            </td>

        </tr>
    }

</table>

@model IEnumerable<PoliziaMunicipale_MVC.TipoDiViolazione>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-primary">Violazioni</h2>

<p>
    @Html.ActionLink("Inserisci violazione", "Create", null, new { @class = "btn btn-outline-primary" })
</p>
<table class="table">
    <tr style="background-color: #007bff; color: white;">
        <th>
            ID Violazione
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descrizione)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdViolazione)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descrizione)
        </td>

    </tr>
}

</table>
